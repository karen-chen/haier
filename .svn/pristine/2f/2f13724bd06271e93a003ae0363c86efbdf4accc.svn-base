<template>
  <div class="content">
    <ul>
      <li class="item" v-for="item in cardlist">
        <div class="top">
          <img :src="imageServerUrl+item.card.merchant.merchantLogo">
          <p>{{item.card.resourceName}}</p>
        </div>
        <div @click="showbuyRoute(item)" class="bottom">立即领取</div>
      </li>
    </ul>
    <div class="popBox" v-show="endMess">
      <div class="null">
        <img class="pic" src="../../assets/czlImg/icon1.png">
        <p>暂时没有认筹券可领取，晚点再来吧！</p>
      </div>
    </div>
    <div class="endBox" v-show="endActive">
      <div class="text">
        该活动已结束
      </div>
    </div>
  </div>
</template>
<script>
import * as config from '@/lib/config'
import {
  userData,
  EnumConfigType,
  ShareInfo,
  getJsSign,
  wxconfig
} from '@/lib/tools';


export default {
  data() {
    return {
      cardlist: [],
      imageServerUrl: config.imageServerUrl,
      endMess: false,
      detailLink: '',
      endActive:false
    }
  },

  created() {
    var self = this;

    //拒绝分享
    getJsSign(function(sign) {
      wxconfig(sign);
    })
    wx.ready(function() {
      wx.hideAllNonBaseMenuItem();
    });
    //activity/getRecognizeCardList
    $.ajax({
      url: config.locationUrl + "/activity/getRecognizeCardList",
      dataType: "jsonp",
      data: {
        actSid: userData.actSid,
        openid: userData.openid
      },
      success: function(data) {
        console.log(data.ret);
        if (data.ret === "0") {
          if (data.list.length == 0) {
            self.endMess = true;
            // self.$router.push({
            //   name: 'Null'
            // })
          } else {
            self.cardlist = data.list
          }

          console.log(self.endMess);
        } if(data.ret === "-88"){
          self.endActive = true;
        }

        else {
          //处理接口调用失败
          self.error('getRecognizeCardList');
        }
      },
      error(res) {
        self.error('getRecognizeCardList');
      }
    });
  },

  methods: {
    error(msg) {
      console.log('msg:', 'fail');
    },

    showbuyRoute(item) {
      this.$router.push({
        name: 'Buy',
        params: {
          sid: item.sid,
        }
      })
    }


  }
}

</script>
