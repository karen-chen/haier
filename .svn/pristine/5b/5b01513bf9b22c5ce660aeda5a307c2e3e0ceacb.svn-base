<script>
import * as purl from '@/assets/js/purl'
import * as constants from '@/assets/js/constants'
import * as auth from '@/assets/js/auth'
import * as config from '@/lib/config'
import {
  userData,
  EnumConfigType,
  ShareInfo,
  getJsSign,
  wxconfig,
  formatDate,
  splitLink
} from '@/lib/tools';


export default {
  data() {
    return {
      successBtn: false,
      sign: {},
      cardId: '',
      state: '',
      recognizeCardSid: '',
      title: '',
      dateCreate: '',
      useId: '',
      money: 0,
      showGzh: false
    }
  },

  created() {
    document.title = '购买成功页面';
    var self = this;
    //拒绝分享
    getJsSign(function(sign) {
      wxconfig(sign);
    })
    wx.ready(function() {
      wx.hideAllNonBaseMenuItem();
    });

    //存储接口传参所需数据

    this.cardId = localStorage.getItem('checkMember');
    self.recognizeCardSid = localStorage.getItem('recognizeCardSid');
    self.money = localStorage.getItem('money')/100;
    console.log(localStorage.checkMember);

    $.ajax({
      url: config.locationUrl + "/activity/getRecognizeCardDetial",
      dataType: "jsonp",
      data: {
        recognizeCardSid: self.recognizeCardSid,
        openid: userData.openid
      },
      success: function(data) {
        console.log(data);
        if (data.ret === "0") {
          self.status = parseInt(data.ret);
        }
        self.obj = data.obj;
        self.picUrl = data.obj.card.merchant.merchantLogo;
        self.logo = data.obj.card.merchant.merchantName;
        self.title = data.obj.card.resourceName;
        self.dateCreate = self.formatDate(data.obj.dateCreate, 'yyyy-MM-dd hh:mm:ss');
        self.cardNo = data.obj.card.sid;
        self.useId = data.obj.card.merchant.sid;
        console.log(555555555555, data.obj.card.merchant.sid);
      },
      error(res) {
        self.error('getRecognizeCardList');
      }
    });



    //获取微信会员卡签名
    $.ajax({
      url: config.locationUrl + "/wxMember/checkMemberBtn",
      dataType: "jsonp",
      data: {
        openid: userData.openid,
        cardId: this.cardId

      },
      success: function(data) {
        console.log(data);
        self.state = data.ret;

        //为0 则显示获取信息资料按钮 需要填写资料,为1 则显示按钮 资料已经填写 直接调微信卡券接口 ,-1 不显示按钮
        if (data.ret === "0") {
          self.successBtn = true;

        } else if (data.ret === "1") {
          self.successBtn = true;
          self.sign = data.sign;
          //获取到微信签名
          // 

        } else {
          // console.log(3);
          //处理接口调用失败

        }
      },
      error(res) {
        self.error('getRecognizeCardList');
      }
    });


  },

  methods: {
    error(msg) {
      console.log('msg:', 'fail');
    },

    showMembershipcard() {
      this.$router.push({
        name: 'Membershipcard'
      })
    },

    //调取微信接口,获取卡片相关信息
    openCard(sign) {
      var cardExt = {};
      cardExt.code = sign.code;
      cardExt.openid = sign.openid;
      cardExt.timestamp = sign.timestamp;
      cardExt.signature = sign.signature;
      cardExt.nonce_str = sign.nonce_str;
      wx.addCard({
        cardList: [{
          cardId: sign.card_id,
          cardExt: JSON.stringify(cardExt)
        }],
        success: function(res) {
          this.successApi()
        },
        cancel: function(res) {}
      });

    },


    //领取成功之后回调接口,通知后台,相应加积分

    successApi() {
      $.ajax({

        url: config.locationUrl + "/wxMember/addWxPackage",
        dataType: "jsonp",
        type: "post",
        data: {
          openid: userData.openid
        },
        success: function(data) {
          console.log('用户已经领取会员卡')
        },
        error(res) {

        }
      });
    },

    showQuanList() {
      if (userData.subscribe == 0) {
        this.showGzh = true;
      }else{
        window.location.href = splitLink() + "#/confessTicket/quanlist";
      }
    },
    formatDate(time) {
      var date = new Date(time);
      return formatDate(date, 'yyyy-MM-dd hh:mm:ss');
    },


  }
}

</script>
