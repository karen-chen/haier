<script>
  import * as config from '@/lib/config'
  import {
    userData,
    getParam
  } from '@/lib/tools';


  export default {
    data(){
      return{
        actSid:'',
        openid:'',
        data:{}
      }
    },

    created(){
      var _this = this;
      _this.actSid = getParam("actSid");
      _this.saleOpenid = getParam("saleOpenid");
        var ua = window.navigator.userAgent.toLowerCase();
        if (ua.match(/MicroMessenger/i) == 'micromessenger') {
          window.location.href = config.locationUrl + '/index.html?actSid=' +  _this.actSid + '&saleOpenid=' + _this.saleOpenid + '#/cardmain'
        } else {
          //console.log("不是微信浏览器")
          $.ajax({
            type: "GET",
            url: config.locationUrl + "/user/getActSaleInfo",
            dataType: "jsonp",
            data: {
              openid:_this.saleOpenid,
              actSid:_this.actSid
            },
            success: function(data) {
              if (data.ret == 0) {
                _this.data=data.data;
              }else {
                console.log('/user/getActSaleInfo:', 'ret != 0');
              }
            },
            error(res) {
              console.log('/user/getActSaleInfo:', 'fail');
            }
          });
        }
    }
  }

</script>
