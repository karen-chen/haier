<script>
import * as config from '@/lib/config'
import * as shake from '@/assets/js/jquery.shake'
import {
  formatDate,
  userData,
  EnumConfigType,
  ShareInfo,
  getJsSign,
  wxconfig,
} from '@/lib/tools';
export default {
  data() {
    return {
      countBox: true,
      countdown: false,
      countend: false,
      rankbox: false,
      personNum: false,
      timerSid: null,
      flagStatus: 0,
      message: '等待主持人开启比赛',
      shakeBox: false,
      leftInMs: -1,
      t_countdown: null,
      personname: '',
      shakenum: 0,
      amount: 0,
      myindex: '',
      myPic: '',
      ranklist: [],
      Contshaking: null
    }
  },
  created() {
    var _this = this;
    console.log(userData.actSid);

    //摇计数
    let u = navigator.userAgent,
      app = navigator.appVersion;
    let isiOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/); //ios终端
    let shakeSpeed = 30;
    let timedif = 60;
    if (isiOS) {
      timedif = 10;
      shakeSpeed = 8;
    }
    $(document).shake({
      shake_speed: shakeSpeed,
      time_difference: timedif,
      shakeAfter: function() {
        _this.doShake();
      }
    });
    _this.Contshaking = setInterval(function() {
      if (_this.shakenum > 0) {
        _this.addShake()
      }
    }, 2000)

    _this.personname = userData.nickname;
    _this.myPic = userData.headimgurl;

    var Period = setInterval(function() {
      _this.checkSpeedTimer();
    }, 2000)

    //订单ID
    document.title = "摇一摇拼手速";
    //拒绝分享
    getJsSign(function(sign) {
      wxconfig(sign);
    })
    wx.ready(function() {
      wx.hideAllNonBaseMenuItem();
    });

    var self = this;
    //接口传参的数据需要存储在本地缓存
    // console.log(111, this.cardOrderId)
  },

  methods: {
    // 准备时段
    checkSpeedTimer() {
      var _this = this;
      $.ajax({
        url: config.locationUrl + "/timer/checkSpeedTimer",
        dataType: "jsonp",
        data: {
          actSid: userData.actSid
        },
        success: function(data) {
          var data0 = data;
          if (data.ret === "0") {
            console.log(_this.shakeBox);
            localStorage.setItem(userData.actSid + 'timerSid', data.timerSid);

            //判断用户是否有参与资格
            _this.addParticipant(function(data) {
              if (data.ret == 0) {
                //有资格参与
                _this.personNum = true;
                _this.countBox = true;
                _this.countdown = false;
                _this.countend = false;
                _this.rankbox = false;
                // _this.shakeBox = false;
                _this.getParticipantAmount();
                _this.permission(data0);
              } else if (data.ret == -1) {
                _this.personNum = false;
                _this.countBox = false;
                _this.countdown = false;
                _this.countend = true;
                _this.rankbox = false;
                _this.shakeBox = false;
                _this.message = "当前用户不存在";
              } else if (data.ret == -2) {
                _this.personNum = false;
                _this.countBox = false;
                _this.countdown = false;
                _this.countend = true;
                _this.rankbox = false;
                _this.shakeBox = false;
                _this.message = "你已经中过奖了 留点机会给别人吧";
              } else if (data.ret == -3) {
                _this.personNum = false;
                _this.countBox = false;
                _this.countdown = false;
                _this.countend = true;
                _this.rankbox = false;
                _this.shakeBox = false;
                _this.message = "比赛已经开始了，等待参与下一轮吧";
              } else if (data.ret == -4) {
                _this.personNum = false;
                _this.countBox = false;
                _this.countdown = false;
                _this.countend = true;
                _this.rankbox = false;
                _this.shakeBox = false;
                _this.message = "比赛已经结束了 等待参与下一轮吧";
              }
            });
          }
          if (data.ret === "-1") {
            _this.personNum = false;
            _this.countBox = false;
            _this.countdown = false;
            _this.countend = true;
            _this.rankbox = false;
            _this.shakeBox = false;
            _this.message = "等待主持人开启比赛"
          }
          if (data.ret === "-2") {
            if (localStorage.getItem(userData.actSid + 'timerSid')) {
              //活动已经结束 调出排行榜
              console.log(111);
              // clearInterval(_this.Contshaking);
              _this.personNum = false;
              _this.countBox = false;
              _this.countdown = false;
              _this.countend = false;
              _this.rankbox = true;
              _this.shakeBox = false;
              _this.getmyRank();
              _this.getRankList();
              _this.getParticipantAmount();
            } else {
              console.log(222);
              _this.personNum = false;
              _this.message = "等待主持人开启比赛"
            }
          }
        }
      });
    },

    //有资格参赛
    permission(data) {
      var _this = this;
      if (data.flagStatus == '2') {
        _this.countBox = true;
        _this.rankbox = false;
        _this.countdown = false;
        _this.countend = false;
        _this.personNum = true;
        _this.shakeBox = false;
        _this.message = "注意！比赛马上开始";
      } else if (data.flagStatus == '3') {
        if (data.leftInMs > 1000) {
          _this.leftInMs = Math.floor(data.leftInMs / 1000)
          _this.startCountDown();
        } else {
          if (!_this.shakeBox) {
            _this.toShake();
          }
        }
      }
    },
    startCountDown() {
      var _this = this;
      clearTimeout(_this.t_countdown);
      if (_this.leftInMs == 0) {
        _this.countdown = false;
        return;
      }
      _this.countdown = true;
      _this.t_countdown = setTimeout(function() {
        _this.leftInMs--;
        _this.startCountDown();
      }, 1000);
    },
    //准备开始 出现钉的声音
    toShake() {
      var _this = this;
      _this.countBox = true;
      _this.countdown = false;
      _this.shakeBox = true;
      _this.message = "快速摇动手机，不要停";

      document.getElementById("voice_ding").play();
    },
    //摇并且计数
    doShake() {
      var _this = this;
      if (!_this.shakeBox) {
        return;
      }
      _this.shakenum++;


      if (typeof WeixinJSBridge == "object" && typeof WeixinJSBridge.invoke == "function") {
        WeixinJSBridge.invoke('getNetworkType', {}, function(res) {
          document.getElementById("voice_kaka").play();

        });
      }
    },

    //判断用户是否有参与资格
    addParticipant(cb) {
      var _this = this;
      $.ajax({
        url: config.locationUrl + "/speed_act/addParticipant",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem(userData.actSid + 'timerSid'),
          openid: userData.openid,
          actSid: userData.actSid
        },
        success: function(data) {
          cb && cb(data);
        },
      });
    },

    //我的排行榜
    getmyRank() {
      var _this = this;
      $.ajax({
        url: config.locationUrl + "/speed_act/getRank",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem(userData.actSid + 'timerSid'),
          openid: userData.openid,
        },
        success: function(data) {
          if (data.ret == 0) {
            console.log(123123, data.index);
            if (data.index == 0) {
              _this.myindex = '暂无排名'
            } else {
              _this.myindex = "第" + data.index + "名";
            }
          }
        },
      });
    },

    //所有参与人排行
    getRankList() {
      var _this = this;
      $.ajax({
        url: config.locationUrl + "/speed_act/getRankList ",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem(userData.actSid + 'timerSid'),
          openid: userData.openid,
        },
        success: function(data) {
          if (data.ret == 0) {
            _this.ranklist = data.rank
          }
        },
      });
    },


    //摇动的时候 添加次数
    addShake() {
      var _this = this;
      $.ajax({
        url: config.locationUrl + "/speed_act/addShake",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem(userData.actSid + 'timerSid'),
          openid: userData.openid,
          actSid: userData.actSid,
          count: _this.shakenum
        },
        success: function(data) {
          _this.shakenum = 0;
        },
      });
    },


    //参与总人数
    getParticipantAmount() {
      var _this = this;
      $.ajax({
        url: config.locationUrl + "/speed_act/getParticipantAmount",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem(userData.actSid + 'timerSid'),
        },
        success: function(data) {
          if (data.ret == 0) {
            _this.amount = data.amount;
          }
        },
      });
    },

    closePage() {
      wx.ready(function() {
        wx.closeWindow();
      });

    }
  }
}

