<script>
import * as config from '@/lib/config'
import {
  userData,
  formatDate,
  getJsSign,
  wxconfig,
  wxHideMenu
} from '@/lib/tools';


export default {
  data() {
    return {
      list: [],
      choose_index: -1,
      showPop: false,
      msg: "",
      popPic:false,
      imgPic:'',
      imageServerUrlpic: config.imageServerUrl,
    }
  },
  created() {
    document.title = "生成售券二维码";
    var _this = this;
    getJsSign(function(sign) {
      wxconfig(sign);
    })
    wxHideMenu()
    wx.ready(function() {
      wx.showMenuItems({
        menuList: [
          'menuItem:favorite',
        ] // 要显示的菜单项，所有menu项见附录3
      });
    })
    $.ajax({
      type: "GET",
      url: config.locationUrl + "/user/getActList",
      dataType: "jsonp",
      data: {
        openid: userData.openid
      },
      success: function(data) {
        console.log(data.list.length)
        if (data.ret == 0) {
          if (data.list.length <= 0) {
            _this.$router.push({ path: 'uncoupon' })
          } else {
            _this.list = data.list
            console.log(1111111111, _this.list)
            _this.list.forEach(function(item) {
              console.log(item.startDate)
              item.startDate = formatDate(new Date(item.startDate.replace(/-/g, "/")), 'yyyy-MM-dd')
              item.endDate = formatDate(new Date(item.endDate.replace(/-/g, "/")), 'yyyy-MM-dd')
              // console.log(list.startDate)
            })
          }
        } else {
          console.log('/user/getActList:', 'ret != 0');
        }
      },
      error(res) {
        console.log('/user/getActList:', 'fail');
      }
    });
  },
  methods: {
    chooseBtn(index) {
      this.choose_index = index;
    },
    codeBtn(activity) {
      var _this = this
      var activitySid=activity.sid
      console.log(activity);
      $.ajax({
        type: "GET",
        url: config.locationUrl + "/user/getActSalePic",
        dataType: "jsonp",
        data: {
          openid: userData.openid,
          actSid: activitySid
        },
        success: function(data) {
          console.log(data);
          if (data.ret == 0) {
            localStorage.setItem('activitySid', activitySid);
            _this.$router.push({
              name: 'Code'
            })

          } else if (data.ret == 1) {
            _this.showPop = true
            _this.msg = "该活动已删除，无法生成售券二维码"
            setTimeout(function() {
              _this.showPop = false
            }, 2000)
          } else if (data.ret == 2) {
            _this.showPop = true
            _this.msg = "该活动已结束，无法生成售券二维码"
            setTimeout(function() {
              _this.showPop = false
            }, 2000)
          } else if (data.ret == 3) {
            _this.showPop = true
            _this.msg = "无法生成售券二维码，请重新绑定"
            setTimeout(function() {
              _this.showPop = false
            }, 2000)
          } else if (data.ret == 4) {
            _this.showPop = true
            _this.msg = "无法售卖该活动的认筹券"
            setTimeout(function() {
              _this.showPop = false
            }, 2000)
          } else {
            console.log('/user/getActSaleInfo:', 'ret != 0');
          }
        },
        error(res) {
          console.log('/user/getActSaleInfo:', 'fail');
        }
      });

    }
  }
}

</script>
