<template>
  <div class="content">
    <div class="main">
      <img class="personPic" :src="imageServerUrl + picUrl">
      <p class="logo">{{title}}</p>
      <h2 class="title">{{buyBtn}}</h2>
      <div class="codetime">
        有效日期{{startDate}} 至 {{endDate}}
      </div>
      <div class="inputma">
        <input type="" name="" placeholder="请输入核销密码" v-model="code">
      </div>
      <div class="buyBtn" @click="codeMatch">确定</div>
    </div>
    <!-- 核销成功 -->
    <div class="masuccess" v-show="tips">{{masseg}}</div>
  </div>
</template>
<script>
import * as config from '@/lib/config'
import '@/assets/js/jquery.qrcode.min'
import {
  userData,
  EnumConfigType,
  ShareInfo,
  formatDate
} from '@/lib/tools';

export default {
  data() {
    return {
      imageServerUrl: config.imageServerUrl,
      picUrl: '',
      logo: '',
      title: '',
      buyBtn: '',
      startDate: '',
      endDate: '',
      masseg: '',
      code: '',
      tips: false
    }
  },

  created() {


    var self = this;

    //获取相关卡片详情
    $.ajax({
      url: config.locationUrl + "/order/getMyRecognizeCardDetail",
      dataType: "jsonp",
      data: {
        openid: userData.openid,
        cardOrderId: userData.cardOrderId
      },
      success: function(data) {
        console.log(data);
        if (data.ret === "0") {
          self.picUrl = data.card.merchant.merchantLogo;
          self.title = data.card.merchant.merchantName;
          self.buyBtn = data.card.resourceName;
          self.startDate = self.formatDate(data.order.startDate);
          self.endDate = self.formatDate(data.order.endDate);
        } else {
          //处理接口调用失败
          self.error('getMyRecognizeCardDetail');
        }
      },
      error(res) {
        self.error('getMyRecognizeCardDetail');
      }
    });

  },

  methods: {
    error(msg) {
      console.log('msg:', 'fail');
    },
    formatDate(time) {
      var date = new Date(time);
      return formatDate(date, 'yyyy-MM-dd hh:mm');
    },
    codeMatch() {
      // alert(111);
      var self = this;
      if (this.code == '') {
      	this.tipsShow('核销码不能为空');
      } else {
        //提交核销密码,进行核销
        $.ajax({
          url: config.locationUrl + "/order/hexiao",
          dataType: "jsonp",
          data: {
            openid: userData.openid,
            cardOrderId: userData.cardOrderId,
            code: this.code
          },
          success: function(data) {
          	console.log(data);
            if (data.ret === "0") {
              this.$router.push({
                name: 'Prizesuccess'
              })
            }
            if (data.ret === '1') {
              self.tipsShow('订单号无效');
            }
            if (data.ret === '2') {
              self.tipsShow('密码错误');
            }
            if (data.ret === '3') {
              self.tipsShow('订单状态不对');
            }
            if (data.ret === '-99') {
              self.tipsShow('参数异常');
            }
          },
          error(res) {
            self.error('getMyRecognizeCardDetail');
          }
        });

      }
    },

//弹框定时显示
    tipsShow(meg) {
      var self = this;
      this.tips = true;
      this.masseg = meg;
      setTimeout(() => {
        self.tips = false;
      }, 600);
    }

  }
}

</script>
