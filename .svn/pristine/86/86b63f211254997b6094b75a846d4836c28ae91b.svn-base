    <div class="screen_bottom">
      <h2>下轮奖品</h2>
      <div class="gift_list">
        <ul>
          <li v-for = "prize in prize_list" :key="prize.resourceId">
            <h3>{{prize.resourceName}}</h3>
            <p><span>{{prize.launchAmount}}</span>个</p>
          </li>
