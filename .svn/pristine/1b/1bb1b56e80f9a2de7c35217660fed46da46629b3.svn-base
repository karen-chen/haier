<script>
import * as config from '@/lib/config'
import '@/assets/js/jquery.qrcode.min'
import {
  getParam,
  formatDate,
  userData,
  EnumConfigType,
  ShareInfo,
  getJsSign,
  wxconfig
} from '@/lib/tools';
export default {
  data() {
    return {
      startbox: true,
      trackbox: false,
      rankbox: false,
      countdown: false,
      actSid: '',
      timerSid: '',
      leftInMs: 0,
      t_countdown: null,
      amount: 0,
      rowslistleft: [],
      rowslistright: [],
      rankList: [],
      targetTime: 0,
      erweima: config.cdnUrl,
      leftInMs: -1,
      link: ''
    }
  },
  created() {
    //订单ID
    var _this = this;
    setInterval(function() {
      _this.checkSpeedTimer();
    }, 2000);
    document.title = "摇一摇拼手速";
    _this.actSid = getParam('actSid');
    _this.link =_this.erweima + '/index.html?actSid=' + _this.actSid + '#/runbox';
    //生成二维码
    $.ajax({
      type: "GET",
      url: config.authUrl + "/shorturl/long2short",
      dataType: "jsonp",
      data: {
        appId: config.appid,
        long_url: _this.link
      },
      success: function(data) {
        console.log("after createQcode");
        console.log(data);
        if (data.errcode == 0) {
          //text任意内容 
          $("#qrcode_img").qrcode({
            width: 300,
            height: 300,
            render: "canvas", //table/canvas方式
            text: data.short_url
          });
        } else {
          console.log('createQcode:', 'ret != 0');
        }
      },
      error(res) {
        console.log('createQcode:', 'fail');
      }
    });

    //拒绝分享
    getJsSign(function(sign) {
      wxconfig(sign);
    })
    wx.ready(function() {
      wx.hideAllNonBaseMenuItem();
    });
  },

  methods: {
    //拉取时段接口
    checkSpeedTimer() {
      var _this = this;
      $.ajax({
        type: "GET",
        url: config.locationUrl + "/timer/checkSpeedTimer",
        dataType: "jsonp",
        data: {
          actSid: _this.actSid,
        },
        success: function(data) {

          if (data.ret == 0) {
            localStorage.setItem('timerSid', data.timerSid);
            _this.targetTime = data.targetTime;
            if (data.flagStatus == '2') {
          _this.startbox = true;
          _this.trackbox = false;
          _this.rankbox = false;
          _this.countdown = false;

              //参与人数头像
              _this.getParticipantList();
              //参与人数总数
              _this.getParticipantAmount();
            }
            if (data.flagStatus == '3') {
              if (_this.leftInMs == -1 && data.leftInMs > 0) {
                _this.leftInMs = Math.floor(data.leftInMs / 1000);
                _this.countdown = true;
                _this.t_countdown = setInterval(function() {
                  if (_this.leftInMs < 1) {
                    _this.toSaidao();
                  }
                  _this.leftInMs--
                }, 1000);
              } else if (data.leftInMs == 0) {
                if (!_this.trackbox) {
                  _this.toSaidao();
                }
              }
            }
          }
          if (data.ret === "-2") {
            // if (localStorage.getItem('timerSid')) {
            //   //活动已经结束 调出排行榜

            // }
          }

        },
      });
    },

    //参与人物头像
    getParticipantList() {
      var _this = this;
      $.ajax({
        type: "GET",
        url: config.locationUrl + "/speed_act/getParticipantList",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem('timerSid'),
        },
        success: function(data) {
          _this.rowslistright = [];
          _this.rowslistleft = [];
          if (data.ret == 0) {
            if (data.rows) {
              data.rows.forEach((item, index) => {
                if (index % 2 == 0) {
                  _this.rowslistleft.push(item);
                } else {
                  _this.rowslistright.push(item);
                }
              })
            }
            console.log(_this.rowslistright);
          }
        },
      });
    },

    //参与人总数
    getParticipantAmount() {
      var _this = this;
      $.ajax({
        type: "GET",
        url: config.locationUrl + "/speed_act/getParticipantAmount",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem('timerSid'),
        },
        success: function(data) {
          if (data.ret == 0) {
            _this.amount = data.amount;
          }
        },
      });
    },

    //赛道赛跑
    getRankList() {
      var _this = this;
      $.ajax({
        type: "GET",
        url: config.locationUrl + "/speed_act/getRankList",
        dataType: "jsonp",
        data: {
          timerSid: localStorage.getItem('timerSid'),
        },
        success: function(data) {
          if (data.ret == 0) {
            if (data.rank) {
              data.rank.forEach((item, index) => {
                item.speed = item.total / _this.targetTime * 100;
              })
              _this.rankList = data.rank;
              console.log(_this.rankList)
            }
          }
          if (data.end == 1) {
            _this.startbox = false;
            _this.trackbox = false;
            _this.rankbox = true;
            _this.countdown = false;
            _this.getRankList();
            _this.getParticipantAmount();
          }
        },
      });
    },

    //调出赛道
    toSaidao() {
      var _this = this;
      clearInterval(this.t_countdown);
      _this.startbox = false;
      _this.trackbox = true;
      _this.rankbox = false;
      _this.countdown = false;
      setInterval(function() {
        _this.getRankList();
      }, 2000)

    }
  }
}

